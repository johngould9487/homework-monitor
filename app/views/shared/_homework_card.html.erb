<div class="homework-card">
  <% if current_user.teacher %>
    <div class="homework-card-titles">
      <span>
      <p class="homework-title"><%= assignment.title %></p>
      </span>
      <p class="homework-date">Due <%= assignment.date_due.strftime("%A #{assignment.date_due.day.ordinalize} %B") %></p>
    </div>
    <% if assignment.marked_percentage < 50 %>
      <div class="homework-status homework-under-marked">
        <p><%= assignment.marked_percentage %>% marked</p>
      </div>
    <% elsif assignment.marked_percentage < 100 %>
      <div class="homework-status homework-partially-marked">
        <p><%= assignment.marked_percentage %>% marked</p>
      </div>
    <% else %>
      <div class="homework-status homework-fully-marked">
        <p><%= assignment.marked_percentage %>% marked</p>
      </div>
    <% end %>
    <%= link_to '', teaching_group_assignment_path(assignment.teaching_group, assignment), class: 'homework-link' %>
  <% elsif current_user.guardian %>
    <div class="homework-card-titles">
      <span>
      <p class="homework-title"><%= attempt.assignment.title %></p>
      </span>
      <p class="homework-date">Due <%= attempt.assignment.date_due.strftime("%A #{attempt.assignment.date_due.day.ordinalize} %B") %></p>
    </div>
    <% if attempt.mark %>
      <div class="homework-status homework-marked">
        <p><%= attempt.comment %></p>
      </div>
    <% else %>
      <div class="homework-status homework-incomplete">
        <p><%= attempt.mark %></p>
        <p><%= attempt.comment %></p>
      </div>
    <% end %>
    <%= link_to '', teaching_group_assignment_path(attempt.assignment.teaching_group, attempt.assignment), class: 'homework-link' %>
  <% elsif current_user.student %>
    <div class="homework-card-titles">
      <span>
      <p class="homework-title homework-student"><%= attempt.assignment.title %></p>
      </span>
      <p class="homework-date">Due <%= attempt.assignment.date_due.strftime("%A #{attempt.assignment.date_due.day.ordinalize} %B") %></p>
    </div>
    <div class="homework-status homework-student-mark">
      <p><%= attempt.mark %> - Mark</p>
      <p><%= attempt.comment %> - Comment</p>
    </div>
    <%= link_to '', teaching_group_assignment_path(attempt.assignment.teaching_group, attempt.assignment), class: 'homework-link' %>
  <% end %>
</div>
