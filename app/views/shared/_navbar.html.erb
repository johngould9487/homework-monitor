<div class="navbar-wagon">
  <!-- Logo -->
  <% if user_signed_in? %>
    <% if !current_user.guardian %>
      <%= link_to teaching_group_upcoming_path(teaching_group), class: "navbar-wagon-brand" do %>
        <% if current_user.teacher %>
          <%= image_tag "logo-teacher.png", height: 35 %>
        <% else %>
          <%= image_tag "logo-student.png", height: 35 %>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to child_upcoming_path(child), class: "navbar-wagon-brand" do %>
        <%= image_tag "logo-guardian.png", height: 35 %>
      <% end %>
    <% end %>
    <% if current_user.teacher %>
      <div class="navbar-add-homework">
        <%= link_to new_teaching_group_assignment_path(@teaching_group) do %>
          <p><i class="fas fa-plus-circle"></i> Add new homework</p>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? && current_user.teacher %>
      <div class="dropdown">
        <div id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= teaching_group.group_code %>
          <span class="caret"></span>
        </div>

        <ul class="dropdown-menu" aria-labelledby="dLabel">
          <% current_user.teacher_teaching_groups.each do |teaching_group| %>
            <% if params[:action] == "upcoming" %>
              <li><%= link_to teaching_group.group_code, teaching_group_upcoming_path(teaching_group)  %></li>
            <% elsif params[:action] == "past" %>
              <li><%= link_to teaching_group.group_code, teaching_group_past_path(teaching_group)  %></li>
            <% elsif params[:action] == "markbook" %>
              <li><%= link_to teaching_group.group_code, teaching_group_markbook_path(teaching_group)  %></li>
            <% elsif params[:action] == "new" %>
              <li><%= link_to teaching_group.group_code, new_teaching_group_assignment_path(teaching_group)  %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if user_signed_in? && current_user.student %>
      <div class="dropdown">
        <div id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= teaching_group.group_code %>
          <span class="caret"></span>
        </div>

        <ul class="dropdown-menu" aria-labelledby="dLabel">
          <% current_user.student_teaching_groups.each do |teaching_group| %>
            <% if params[:action] == "upcoming" %>
              <li><%= link_to teaching_group.group_code, teaching_group_upcoming_path(teaching_group)  %></li>
            <% elsif params[:action] == "past" %>
              <li><%= link_to teaching_group.group_code, teaching_group_past_path(teaching_group)  %></li>
            <% elsif params[:action] == "markbook" %>
              <li><%= link_to teaching_group.group_code, teaching_group_markbook_path(teaching_group)  %></li>
            <% elsif params[:action] == "new" %>
              <li><%= link_to teaching_group.group_code, new_teaching_group_assignment_path(teaching_group)  %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if user_signed_in? && current_user.guardian && params[:action] != "show" %>
      <div class="dropdown">
        <div id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= child.first_name %>
          <span class="caret"></span>
        </div>

        <ul class="dropdown-menu" aria-labelledby="dLabel">
          <div id="tooltip" type="button" data-toggle="tooltip" data-placement="top" title="Tooltip on top">Tooltip on top</button>">
          <% current_user.students.each do |child| %>
            <% if params[:action] == "upcoming" %>
              <li><%= link_to child.first_name, child_upcoming_path(child)  %></li>
            <% elsif params[:action] == "past" %>
              <li><%= link_to child.first_name, child_past_path(child)  %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "Einstein.jpg", id: "navbar-wagon-menu", "data-toggle" => "dropdown", class: "avatar"%>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%#= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>
