<%#= render 'shared/sidebar' %>
<h2 style="text-align:center; color:white;">Set new homework</h2>

<%= simple_form_for ([@teaching_group, @assignment]) do |f| %>
  <div class="new-homework-form">
    <div class="left-column white-background ">
      <%= f.input :title, label: "Homework title:" %>
      <%= f.input :description, label: "Homework notes:" %>
      <%= f.input :guardian_note, label: "Note to guardians:" %>
    </div>
    <div class="right-column">
      <div class="white-background">
        <%= f.input :date_created, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :date_due, as: :string, required: false, input_html: {
          class: "datepicker"} %>
      </div>
      <div class="white-background ">
        <%= f.input :grading_type, collection: [ "A-F", "Percentage", "0-10", "0-100", "Other"]%>
      </div>
      <div class="save-btn">
        <%= f.button :submit, "Save" %>
      </div>
      <div class="set-btn">
        <%= f.button :submit, "Set"%>
      </div>
    </div>
  </div>
<% end %>


