<%= render 'shared/tabs', teaching_group: @teaching_group %>

<% @assignments.each do |assignment| %>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#accordion-<%= assignment.id %>" aria-expanded="true" aria-controls="collapseOne">
           <h3><%= assignment.title %></h3>
        </a>
      </h4>
    </div>
    <div id="accordion-<%= assignment.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
          <div class="markbook-card">
    <% assignment.attempts.each do |attempt| %>
      <div class="attempt-flex">
        <p><%= attempt.student.first_name %> <%= attempt.student.last_name %></p>
        <p><%= attempt.mark if attempt.mark %> <%= attempt.comment if attempt.comment %></p>
        <div class="card-actions">
          <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#markModal<%= attempt.id %>">
            <%= attempt.mark ? "Update mark" : "Select mark"  %>
          </button>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal" id="markModal<%= attempt.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Add Mark to Student's Homework </h4>
            </div>
            <div class="modal-body">

              <%= simple_form_for attempt do |f| %>
                <%= f.input :mark %>
                <%= f.input :comment %>
                <%= f.submit %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
      </div>
    </div>
  </div>


<% end %>












